<%= render "nav"   %>

<div class="container mt-2">
<div class="row">
    <% @album.media.each do |images| %>
     <div class="col col-md-3 g-4 mt-2">
      <%= image_tag (images) %>
      <% end %>
      </div>
      </div>
     </div>
</div><br>

<div class="me-2">
<%if current_user.present? && (current_user.id == @album.user_id)%>
<%= link_to "Destroy", album_path(@album), data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
  }, class: 'btn btn-danger mx-auto ms-5 ' %>
  <%=link_to "Edit" , edit_album_path(@album), class: 'btn btn-secondary mx-auto ms-2' %>
<% end %>
</div>

<%= render "footer" %>